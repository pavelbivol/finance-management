<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">
    <!--android:background="@drawable/recicler_view_rounded_corners">-->

    <androidx.cardview.widget.CardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:elevation="12dp"
        android:id="@+id/cardview"
        app:cardCornerRadius="20dp"
        android:layout_centerHorizontal="true"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:layout_constraintVertical_chainStyle="packed"/>

    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/charge_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/cardview"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/charge_date"
        app:layout_constraintVertical_chainStyle="packed"
        android:textColor="@color/colorWhite"
        android:layout_marginStart="14dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/charge_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/cardview"
        app:layout_constraintTop_toBottomOf="@+id/charge_description"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:textColor="@color/colorHtmlSilver"
        android:layout_marginStart="12dp"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/charge_amt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/delete_charge_image"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="parent"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:textStyle="bold"/>



    <ImageView
        android:id="@+id/delete_charge_image"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="parent"
        android:src="@drawable/ic_delete"
        app:layout_constraintVertical_chainStyle="packed"
        android:tint="@color/colorWhite"/>


</androidx.constraintlayout.widget.ConstraintLayout>